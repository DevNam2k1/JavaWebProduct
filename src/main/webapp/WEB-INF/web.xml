<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.javawebproduct.controller.admin.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>com.javawebproduct.controller.admin.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductWebController</servlet-name>
        <servlet-class>com.javawebproduct.controller.web.ProductWebController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
        <url-pattern>/product/new</url-pattern>
        <url-pattern>/product/create</url-pattern>
        <url-pattern>/product/delete</url-pattern>
        <url-pattern>/product/edit</url-pattern>
        <url-pattern>/product/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/view/admin/login-user</url-pattern>
        <url-pattern>/login/form</url-pattern>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductWebController</servlet-name>
        <url-pattern>/shop-grid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
